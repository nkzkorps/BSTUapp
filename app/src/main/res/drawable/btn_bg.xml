<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/button_off" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/blue_e6_alpha_50" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/button_on_start"
                android:centerColor="@color/button_on_center"
                android:endColor="@color/button_on_end"
                />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>