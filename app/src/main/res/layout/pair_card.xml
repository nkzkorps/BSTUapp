<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pairCardId"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:background="@drawable/bg_grey"
    android:paddingVertical="12dp"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_pairnum"
            android:orientation="vertical"
            android:paddingHorizontal="12dp"
            android:paddingVertical="2dp">

            <TextView
                android:id="@+id/pairNumTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                android:id="@+id/pairName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Имя пары"
                android:textColor="@color/white"
                android:layout_weight="1"/>
                <TextView
                    android:id="@+id/pairType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"

                    android:layout_marginRight="12dp"
                    android:background="@drawable/bg_pair_lecture"
                    android:gravity="center"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:text="лек"
                    android:textColor="@color/white" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pairStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="99:99"
                    android:textColor="@color/white_alpha_60" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="0"
                    android:text="—"
                    android:textColor="@color/white_alpha_60" />

                <TextView
                    android:id="@+id/pairEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="11:11"
                    android:textColor="@color/white_alpha_60" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/pairInfoLinear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/audiencesTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/button_on_end"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/teachersTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="6dp"
                    android:textColor="@color/button_on_end"
                    android:textSize="14sp" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>